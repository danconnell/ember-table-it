{{#each row in rows}}
  <tr>
    {{#each column in columns}}
      <td>
        {{#if column.linkTo}}
          {{#link-to column.linkTo row}}
            {{get-property row column}}
          {{/link-to}}
        {{else}}
          {{#if column.checkbox}}
            {{input type="checkbox" checked=row.selected}}
          {{else}}
            {{get-property row column}}
          {{/if}}
        {{/if}}
      </td>
    {{/each}}
  </tr>
{{/each}}
